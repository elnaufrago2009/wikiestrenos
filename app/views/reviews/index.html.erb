<div class="page-header">
  <h1>Ultimos Estrenos</h1>
</div>

<ul class="breadcrumb">
  <li class="active">Home</li>

</ul>

<div class="row">
  <div class="span6">
    <%= will_paginate @reviews, :renderer => BootstrapPagination::Rails %>
  </div>
  <div class="span6">
    <%= form_for(reviews_path, :html=>{:class=>"form-search pull-right"}, :method => "get") do |f| %>
        <div class="input-append">
          <%= text_field_tag :search, params[:search], :class =>"span3 search-query", :placeholder=>"Buscar" %>
          <button type="submit" class="btn"><i class="icon-search"></i> Buscar</button>
        </div>
    <% end %>
  </div>
</div>



<table class="table table-striped table-bordered">
  <tr>
    <th>#Id</th>
    <th>Titulo</th>
    <th>Creado</th>
    <th>Acciones</th>
  </tr>

<% @reviews.each do |review| %>
  <tr>
    <td><%= review.id %></td>
    <td><%= review.titulo %></td>
    <td><%= review.created_at %></td>
    <td>

        <div class="btn-group">
          <%= link_to raw('<i class="icon-eye-open icon-white"></i> Ver'), review, :class => "btn btn-primary" %>
          <%= link_to raw('<i class="icon-edit icon-white"></i> Edit'), edit_review_path(review), :class => "btn btn-primary" %>
          <%= link_to raw('<i class="icon-trash icon-white"></i> Del'), review, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-primary" %>
        </div>


    </td>
  </tr>
<% end %>
</table>

<%= will_paginate @reviews, :renderer => BootstrapPagination::Rails %>

<div class="form-actions">
    <%= link_to raw('<i class="icon-user icon-white"></i> Nuevo'), new_review_path, :class => "btn btn-primary" %>
</div>

